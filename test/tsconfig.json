 // IMPORTANT - This is NOT used in the context of mocha (otherwise uncaught exception)
 //             Just to be able to do a tsc and make sure all compiles correctly
 {
	"compilerOptions": {
		"target": "ES2019",

		"module": "ESNext",

		"moduleResolution": "node", 
		
		"strict": true,

		"allowJs": false,
		"checkJs": false,

		"sourceMap": true,

		"outDir": "./.out/",

		"baseUrl": ".",
		
		"experimentalDecorators": true,
				
		"esModuleInterop": true
	},

	"include": [
		"../src/**/*.ts",
		"./**/*.ts"
	],

	"exclude": [
		"node_modules",
		"services",
		".rpt2_cache" 
	]
}